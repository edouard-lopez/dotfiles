#!/usr/bin/env fish
set -gx MY_SERVER srv-sys
set -gx BROWSER firefox  # Default web browser
set -gx CDPATH $CDPATH . ~ $HOME/projects
set -gx GPG_TTY (tty)
set -gx JAVA_HOME /usr/lib/jvm/java-8-openjdk-amd64/
set -gx PATH $HOME/bin/ $HOME/apps/ /usr/local/bin/ ./node_modules/.bin/ $HOME/.config/fnm/lib/node_modules/ $PATH
set -gx BASE_INCLUDE $HOME/dotfiles/includes
set -gx FISH_INCLUDE $HOME/dotfiles/includes/fish

function include_shell_specific
    if  test  -n $FISH_VERSION
        function refresh
            source "$HOME"/.config/fish/config.fish
        end
    end
end

# THEME PURE #
set fish_function_path $HOME/.config/fish/functions/theme-pure $fish_function_path


include_shell_specific
source "$FISH_INCLUDE/core.fish"
source "$FISH_INCLUDE/backup.fish"
source "$FISH_INCLUDE/date.fish"
source "$FISH_INCLUDE/docker.fish"
source "$FISH_INCLUDE/git.fish"
source "$FISH_INCLUDE/input.fish"
source "$FISH_INCLUDE/monitoring.fish"
source "$FISH_INCLUDE/nodejs.fish"
source "$FISH_INCLUDE/network.fish"
source "$FISH_INCLUDE/packages-manager.fish"
source "$FISH_INCLUDE/pager.fish"
source "$FISH_INCLUDE/python.fish"
source "$FISH_INCLUDE/terminal.fish"
source "$FISH_INCLUDE/string.fish"
source "$FISH_INCLUDE/utilities.fish"
source "$FISH_INCLUDE/additional.fish"
